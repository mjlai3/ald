extends _layouts/base

block content
	div.container
		div.slick__container--index(style="background-image: url('/images/placeholder2.jpg');")
			div.slick__container--index__frame
				each val in site.data.articlesslick
					- var grid = (val.grid === "undefined" ? '' : val.grid)
					div.grid-item--slick(class="#{grid} #{val.type} #{val.category}")
						a.article__link(href="#")
							div.article__img(style="background-image:url('#{val.background}')")
								div.article__tag__container--outer
									div.article__tag__container--inner
										img.article__icon(src="/images/#{val.icon}")
										div.article__tag #{val.tag}
							div.article__text__container--outer
								div.article__text__container--inner
									h2.article__title #{val.title}
									if val.author
										div.article__author__container
											if val.author[0].image
												div.article__author__img(style="background-image:url('#{val.author[0].image}')")
												div.article__author__name #{val.author[0].name}
											else
												div.article__author__name <small>WITH</small> #{val.author[0].name}
									if val.text
										each paragraph in val.text
											p.article__text #{paragraph.paragraph}
			div.slick__container--index__frame 2
			div.slick__container--index__frame 3
			div.slick__container--index__frame 4
		div.row
			div.columns.large-12
				div.filter__container--outer
					div.filter__container--inner
						div.filter__button
							input.filter__checkbox#filter-all(type='checkbox', value='all', checked='')
							label.filter__checkbox__label(for="filter-all")
								span.filter__checkbox__span.all
								| All
						div.filter__button
							input.filter__checkbox#filter-fitness(type='checkbox', value='fitness')
							label.filter__checkbox__label(for="filter-fitness")
								span.filter__checkbox__span.fitness
								| Fitness
						div.filter__button
							input.filter__checkbox#filter-lifestyle(type='checkbox', value='lifestyle')
							label.filter__checkbox__label(for="filter-lifestyle")
								span.filter__checkbox__span.lifestyle
								| Lifestyle
						div.filter__button
							input.filter__checkbox#filter-food(type='checkbox', value='food')
							label.filter__checkbox__label(for="filter-food")
								span.filter__checkbox__span.food
								| Food
		div.row
			div.columns.large-12
				div.grid
					div.grid-sizer
					div.gutter-sizer
					each val in site.data.articles
						- var grid = (val.grid === "undefined" ? '' : val.grid)
						div.grid-item(class="#{grid} #{val.type} #{val.category}")
							a.article__link(href="#")
								div.article__img(style="background-image:url('#{val.background}')")
									div.article__tag__container--outer
										div.article__tag__container--inner
											img.article__icon(src="/images/#{val.icon}")
											div.article__tag #{val.tag}
								div.article__text__container--outer
									div.article__text__container--inner
										h2.article__title #{val.title}
										if val.author
											div.article__author__container
												if val.author[0].image
													div.article__author__img(style="background-image:url('#{val.author[0].image}')")
													div.article__author__name #{val.author[0].name}
												else
													div.article__author__name <small>WITH</small> #{val.author[0].name}
										if val.text
											each paragraph in val.text
												p.article__text #{paragraph.paragraph}
				nav.article__pagination
					p
						a(href='page-2.html') Page 2
				div.article__more__container
					img.article__more(src="/images/load-more.png")
		+subscribe()